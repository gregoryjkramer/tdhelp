{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dotnet: run webapi",
      "type": "process",
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "AppOwnsDataWebApi"
      ],
      "problemMatcher": "$msCompile",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "npm: dev react",
      "type": "process",
      "command": "npm",
      "args": [
        "run",
        "dev",
        "--prefix",
        "AppOwnsDataReactClient"
      ],
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "dev: start api + client",
      "dependsOn": [
        "dotnet: run webapi",
        "npm: dev react"
      ],
      "dependsOrder": "parallel"
    }
  ]
}
